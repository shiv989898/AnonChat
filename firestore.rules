rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /waiting_pool/{entryId} {
      allow read, create, delete: if isSignedIn();
      allow list: if isSignedIn();
      allow update: if false; // Entries are created and deleted, not updated.
    }

    match /chat_sessions/{sessionId} {
      // Allow creation by any signed-in user.
      allow create: if isSignedIn();

      // Allow read/write if the user is one of the participants in the session.
      allow read, update: if isSignedIn() && (resource.data.user1Id == request.auth.uid || resource.data.user2Id == request.auth.uid);

      // Disallow list and delete for security.
      allow list, delete: if false;
    }
  }
}
